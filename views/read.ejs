<%- include('./required_files/header',{user:user}); %>
<style>
	.author-image {
		width:21px;
	}
</style>
	<div class="container">
		<h3><%= story[0].title %></h3>
	<p><img class="author-image img-circle" src="/uploaded-images/<%= story[0].by[0].profile_pic %>" /> <a href="/profile/<%= story[0].by[0].username %>"><%= story[0].by[0].username %></a></p>
	<div class="container">
		<%- story[0].content %>
	</div>
	</div>
	<h3 class="container">Comments</h3>
	<div class="container">
		<div id="commentSection" class="container">
			<% if(comments.length > 0){ %>
			<% comments.forEach(function(obj){ %>
	<div class="panel panel-default">
  	<div class="panel-heading"><span class="fa fa-user" style="font-size:24px;"></span> <%= obj.name %></div>
  			<div class="panel-body"><%= obj.comment %></div>
	</div>
		<%	});} %>
		</div>

 		<span class="btn btn-default" id="addComment">Add Comment</span>
		<p class="text-danger" id="error"></p>
		<form action="/comment/add/<%= story[0].slug %>" method="POST" id="enterComment" style="display:none">
			<div class="form-field">
	<textarea rows="6" cols="10" name="comment" placeholder="Enter comment here......" class="form-control"></textarea>
			</div>
			<input type="submit" class="btn btn-default" value="Submit"/>
			<input type="button" id="cancel-btn" class="btn btn-default" value="Cancel"/>
		</form>
	</div>

	<script id="commentSection-template" type="text/template">
		<div class="panel panel-default">
  	<div class="panel-heading"><span class="fa fa-user" style="font-size:24px;"></span> {{user}}</div>
  			<div class="panel-body">{{comment}}</div>
</div>
	</script>
	<script src="/js/Mustache.js"></script>
	<script src="/js/comment.js"></script>
<%- include('./required_files/footer'); %>
